{
    "name": "pauci/cqrs",
    "type": "library",
    "description": "CQRS library",
    "license": "MIT",
    "keywords": [
        "pauci",
        "cqrs",
        "ddd",
        "event-sourcing"
    ],
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5.x-dev"
        }
    },
    "require": {
        "php": "^7.4 | ^8.0",
        "ext-json": "*",
        "pauci/datetime": "^0.3.5",
        "psr/container": "^1.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "ext-PDO": "*",
        "doctrine/dbal": "^2.12",
        "doctrine/orm": "^2.8",
        "guzzlehttp/guzzle": "^7.2",
        "phpstan/phpstan": "^0.12.58",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "suggest": {
        "ramsey/uuid-doctrine": "Provides the ability to use ramsey/uuid as a Doctrine field type"
    },
    "autoload": {
        "psr-4": {
            "CQRS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CQRSTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse --no-progress",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
