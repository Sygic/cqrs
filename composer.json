{
    "name": "sygic/cqrs",
    "type": "library",
    "description": "CQRS library",
    "version": "0.8.5",
    "license": "MIT",
    "keywords": [
        "pauci",
        "cqrs",
        "ddd",
        "event-sourcing"
    ],
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true
    },
    "require": {
        "php": "^8.3 || ^8.4 || ^8.5",
        "ext-json": "*",
        "psr/clock": "^1.0",
        "psr/container": "^1.0 || ^2.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "ext-PDO": "*",
        "ext-redis": "*",
        "doctrine/dbal": "^3.2",
        "doctrine/orm": "^2.8",
        "guzzlehttp/guzzle": "^7.2",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.0.0",
        "rector/rector": "^2.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/cache": "^6.0",
        "symfony/serializer": "^6.0"
    },
    "suggest": {
        "ramsey/uuid-doctrine": "Provides the ability to use ramsey/uuid as a Doctrine field type"
    },
    "autoload": {
        "psr-4": {
            "CQRS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CQRSTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs-check",
            "@rector",
            "@stan",
            "@test"
        ],
        "lint": "parallel-lint src tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "rector": "rector -n -vv",
        "rector:clear": "rector -n --clear-cache -vv",
        "rector:fix": "rector -vv",
        "stan": "phpstan analyse --no-progress  --memory-limit=512M",
        "stan:b": "@stan -b --allow-empty-baseline",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
